<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/one"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/main_home_tab_schedule_normal" />

        <com.tlfmj.bao.jwmjtwo.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/one_title"
            android:text="@string/profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/two"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/main_home_tab_grade_normal" />

        <com.tlfmj.bao.jwmjtwo.widget.CanaroTextView
            android:id="@+id/two_title"
            style="@style/TextView.GuillotineItem"
            android:text="@string/feed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/three"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/main_home_tab_deit_normal" />

        <com.tlfmj.bao.jwmjtwo.widget.CanaroTextView
            android:id="@+id/three_title"
            style="@style/TextView.GuillotineItem.Selected"
            android:text="@string/activity" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/four"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/main_home_tab_health_normal" />

        <com.tlfmj.bao.jwmjtwo.widget.CanaroTextView
            android:id="@+id/four_title"
            style="@style/TextView.GuillotineItem"
            android:text="@string/settings" />
    </LinearLayout>
</LinearLayout>